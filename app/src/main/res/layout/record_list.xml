<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgCapture"
            android:layout_width="113dp"
            android:layout_height="95dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvModelDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기기명칭"
                android:textSize="28dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvModelName"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="모델명"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2022-09-04"
                    android:textAlignment="textEnd" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnLook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/btnLook"
            android:textSize="24sp"
            android:textStyle="bold"
            android:backgroundTint="#d1e7c7"
            android:backgroundTintMode="add"
            android:fontFamily="@font/scdream4"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textColor="#717070"
            app:cornerRadius="@android:dimen/system_app_widget_background_radius"
            app:layout_constraintHorizontal_bias="0.5"
            tools:targetApi="s"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>